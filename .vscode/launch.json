{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Run Specific Tests",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "npm",
        "windows": {
          "runtimeExecutable": "npm.cmd",
        },
        "runtimeArgs": [
            "run-script",
            "test",
            "--api"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
    },
    {
        "name": "Run All Jest Tests",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "npm",
        "windows": {
          "runtimeExecutable": "npm.cmd",
        },
        "runtimeArgs": [
            "run-script",
            "test"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
    },
  ]
}
