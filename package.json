{
  "name": "palserver-manager",
  "version": "2.0.0",
  "description": "A Palworld server manager to auto manage your server",
  "main": "./out/src/ui/main.js",
  "scripts": {
    "test": "jest",
    "build": "npm run webpack && electron-builder",
    "electron": "npm run webpack && electron . --trace-warnings",
    "build:pkg": "npm run webpack && npm run pkg",
    "webpack": "webpack --mode production",
    "release:major": "npm version major && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:patch": "npm version patch && git push && git push --tags",
    "start:json-server": "json-server --watch ./.data/db.json --port 3001"
  },
  "build": {
    "appId": "com.mrmanka.easygsm",
    "productName": "EasyGSM",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "icon": "src/ui/images/EasyGSMLogo.ico",
    "files": [
      "out/**/*"
    ],
    "nsis": {
      "license": "./license.md",
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/ui/images/EasyGSMLogo.ico",
      "installerHeader": "src/ui/images/EasyGSMLogo.bmp",
      "installerSidebar": "src/ui/images/EasyGSMLogo.bmp",
      "uninstallerIcon": "src/ui/images/EasyGSMLogo.ico",
      "uninstallerSidebar": "src/ui/images/EasyGSMLogo.bmp",
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "Matthew Manka",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@sentry/webpack-plugin": "^2.13.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.13",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.10.0",
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@sentry/browser": "^7.99.0",
    "@sentry/react": "^7.99.0",
    "@sentry/tracing": "^7.99.0",
    "@types/react": "^18.2.51",
    "@types/react-dom": "^18.2.18",
    "archiver": "^6.0.1",
    "electron-store": "^8.1.0",
    "fs": "^0.0.1-security",
    "node-cron": "^3.0.3",
    "os": "^0.1.2",
    "react-dom": "^18.2.0",
    "react-router": "^6.22.0",
    "react-router-dom": "^6.22.0",
    "react-transition-group": "^4.4.5",
    "sudo-prompt": "^9.2.1",
    "tree-kill": "^1.2.2"
  },
  "pkg": "./pkg-config.json"
}
